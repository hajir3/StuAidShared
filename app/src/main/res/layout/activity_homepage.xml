<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain4"
    android:orientation="vertical"
    tools:context=".Homepage">

    <TextView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/megrim"
        android:gravity="center"
        android:text="StuAid"
        android:textColor="#3E3330"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/exams_button_homepage"
        android:drawableTop="@drawable/ic_exams"
        android:drawablePadding="-5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/suranna"
        android:text="@string/exams"
        android:textColor="#514440"
        android:textSize="19sp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/grades_button_homepage"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/grades_button_homepage"
        android:drawableTop="@drawable/ic_grades"
        android:drawablePadding="-5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/suranna"
        android:text="@string/grades"
        android:textColor="#514440"
        android:textSize="19sp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tasks_button_hompage"
        app:layout_constraintStart_toEndOf="@+id/exams_button_homepage" />

    <Button
        android:id="@+id/tasks_button_hompage"
        android:drawableTop="@drawable/ic_tasks"
        android:drawablePadding="-5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/suranna"
        android:text="@string/tasks"
        android:textColor="#514440"
        android:background="@android:color/transparent"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/grades_button_homepage" />

</androidx.constraintlayout.widget.ConstraintLayout>


