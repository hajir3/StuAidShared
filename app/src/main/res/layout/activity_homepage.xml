<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Homepage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <View
            android:id="@+id/first"
            android:layout_width="30dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/brown_line" />

        <View
            android:id="@+id/second"
            android:layout_width="30dp"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/first"
            android:background="@drawable/orange_line" />

        <View
            android:id="@+id/third"
            android:layout_width="30dp"
            android:layout_height="190dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/second"
            android:background="@drawable/darkblue_line" />

        <View
            android:id="@+id/fourth"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/third"
            android:background="@drawable/brown_line" />

        <View
            android:id="@+id/fifth"
            android:layout_width="30dp"
            android:layout_height="160dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/first"
            android:background="@drawable/darkblue_line" />

        <View
            android:id="@+id/sixth"
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/fifth"
            android:background="@drawable/brown_line" />

        <View
            android:id="@+id/seventh"
            android:layout_width="30dp"
            android:layout_height="140dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/sixth"
            android:background="@drawable/orange_line" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="473dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/Logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/great_vibes"
            android:gravity="bottom|center"
            android:text="StuAid"
            android:textColor="#000000"
            android:textSize="80sp" />
    </RelativeLayout>


    <Button
        android:id="@+id/planer_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/acme"
        android:text="planer"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/noten_button"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/noten_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/acme"
        android:text="noten"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/todo_button"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/planer_button" />

    <Button
        android:id="@+id/todo_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/acme"
        android:text="to-do"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/noten_button" />

</androidx.constraintlayout.widget.ConstraintLayout>


