<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain4"
    android:orientation="vertical"
    tools:context=".Grades">

   <Button
       android:id="@+id/home_button_grades"
       style="?android:attr/buttonBarButtonStyle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="60dp"
       android:fontFamily="@font/megrim"
       android:text="StuAid"
       android:textAllCaps="false"
       android:textColor="#3E3330"
       android:textSize="24sp"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"  />

   <Button
       android:id="@+id/exams_button_grades"
       android:drawableTop="@drawable/ic_exams"
       android:drawablePadding="-5sp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="20dp"
       android:layout_marginBottom="60dp"
       android:fontFamily="@font/suranna"
       android:text="@string/exams"
       android:textColor="#3E3330"
       android:textSize="19sp"
       android:background="@android:color/transparent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/grades_button_grades"
       app:layout_constraintStart_toStartOf="parent"/>

   <Button
       android:id="@+id/grades_button_grades"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="60dp"
       android:background="@drawable/gradient_background_buttons"
       android:clickable="false"
       android:drawableTop="@drawable/ic_grades"
       android:drawablePadding="-5sp"
       android:fontFamily="@font/suranna"
       android:text="@string/grades"
       android:textColor="#3E3330"
       android:textSize="19sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <Button
       android:id="@+id/tasks_button_grades"
       android:drawableTop="@drawable/ic_tasks"
       android:drawablePadding="-5sp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginBottom="60dp"
       android:layout_marginEnd="20dp"
       android:fontFamily="@font/suranna"
       android:text="@string/tasks"
       android:textColor="#3E3330"
       android:textSize="19sp"
       android:background="@android:color/transparent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toEndOf="@+id/grades_button_grades" />

   <Button
       android:layout_width="40dp"
       android:layout_height="37dp"
       android:layout_marginStart="65dp"
       android:layout_marginBottom="140dp"
       android:hapticFeedbackEnabled="false"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:background="@drawable/add_brown" />




   <Button
       android:id="@+id/test"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/next"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />


   <TextView
       android:id="@+id/button_semester"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="40dp"
       android:layout_marginTop="120dp"
       android:text="SEMESTER"
       android:textColor="#3E3330"
       android:fontFamily="@font/suranna"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       tools:ignore="HardcodedText" />

   <TextView
       android:id="@+id/durchschnitt_1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="120dp"
       android:text="\u00D8"
       android:textColor="#3E3330"
       android:fontFamily="@font/suranna"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toStartOf="@id/kompensationspunkte"
       android:layout_marginEnd="40dp"
       tools:ignore="HardcodedText"
       tools:layout_editor_absoluteX="169dp" />

   <TextView
       android:id="@+id/kompensationspunkte"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="120dp"
       android:layout_marginEnd="40dp"
       android:fontFamily="@font/suranna"
       android:text="+/-"
       android:textColor="#3E3330"
       android:textStyle="bold"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>


