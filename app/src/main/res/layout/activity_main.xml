<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7C7C7"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/first"
            android:layout_width="30dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/black_line" />

        <View
            android:id="@+id/second"
            android:layout_width="30dp"
            android:layout_height="110dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/first"
            android:background="@drawable/red_line" />

        <View
            android:id="@+id/third"
            android:layout_width="30dp"
            android:layout_height="190dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/second"
            android:background="@drawable/green_line" />

        <View
            android:id="@+id/fourth"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/third"
            android:background="@drawable/black_line" />

        <View
            android:id="@+id/fifth"
            android:layout_width="30dp"
            android:layout_height="160dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/first"
            android:background="@drawable/green_line" />

        <View
            android:id="@+id/sixth"
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/fifth"
            android:background="@drawable/black_line" />

        <View
            android:id="@+id/seventh"
            android:layout_width="30dp"
            android:layout_height="140dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/sixth"
            android:background="@drawable/red_line" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="253dp">

        <TextView
            android:id="@+id/Logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/great_vibes"
            android:gravity="bottom|center"
            android:text="StuAid"
            android:textColor="#000000"
            android:textSize="80sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/Tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/baloo"
                android:text="Made by M&amp;H"
                android:textColor="#706D6D"
                android:textSize="24sp" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>