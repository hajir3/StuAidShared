<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.stuaid">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_black"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_black_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">

        <!-- Modifikation der activities.
         android:name gibt den Namen an.
         android:screenOrientation gibt Orientation des Bildschirms an.
         android:theme weist der activity ein bereits erstelltes Theme zu.
         android:exported gibt an, ob ein anderes Programm als android-studio die activity Ã¶ffnen kann-->

        <activity
            android:name=".Test1"
            android:exported="true"
            android:label="@string/title_activity_test1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity

            android:name=".Noten_Fach"
            android:screenOrientation="locked"
            android:exported="true"
            android:theme="@style/Theme.StuAid.Pages"/>
        <activity
            android:name=".Noten_Semester"
            android:screenOrientation="locked"
            android:exported="true"
            android:theme="@style/Theme.StuAid.Pages"/>
        <activity

            android:name=".ToDo"
            android:screenOrientation="locked"
            android:exported="true"
            android:theme="@style/Theme.StuAid.Pages" />
        <activity
            android:name=".Noten"
            android:screenOrientation="locked"
            android:exported="true"
            android:theme="@style/Theme.StuAid.Pages" />
        <activity
            android:name=".Planer"
            android:screenOrientation="locked"
            android:exported="true"
            android:theme="@style/Theme.StuAid.Pages" />
        <activity
            android:name=".Homepage"
            android:screenOrientation="locked"
            android:exported="true"
            android:theme="@style/Theme.StuAid.Pages" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="locked"
            android:exported="true"
            android:theme="@style/Theme.StuAid.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>